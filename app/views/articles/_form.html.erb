<div class="container">  
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <div class="col-12">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-12">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to Articles ]', articles_path, class: "text-info" %>
  </div>
</div>