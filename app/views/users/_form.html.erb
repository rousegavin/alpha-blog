<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <div class="col-12">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to Articles ]', articles_path, class: "text-info" %>
  </div>
</div>